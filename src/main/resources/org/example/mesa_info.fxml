<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.MesaInfoController">
    <children>
        <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <children>
                <VBox alignment="CENTER" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                    <children>
                          <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                              <children>
                                  <Label fx:id="labelNumMesa" text="Mesa nº: Ejemplo" HBox.hgrow="ALWAYS">
                                      <HBox.margin>
                                          <Insets right="5.0" />
                                      </HBox.margin>
                                  </Label>
                                  <ToggleButton fx:id="btnEstadoMesa" mnemonicParsing="false" text="ToggleButton" HBox.hgrow="ALWAYS">
                                      <HBox.margin>
                                          <Insets left="5.0" />
                                      </HBox.margin>
                                  </ToggleButton>
                              </children>
                          </HBox>
                        <ListView fx:id="listViewTiposPlatos" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets bottom="10.0" top="10.0" />
                            </VBox.margin>
                        </ListView>
                    </children>
                </VBox>
                <VBox fx:id="vboxAddPlato" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="labelPlatos" text="Label">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Label>
                  <ListView fx:id="listViewPlatos" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
                  <VBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                     <children>
                        <Label fx:id="labelCantidad" text="Label" VBox.vgrow="ALWAYS">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Label>
                        <Label fx:id="labelProductoSelec" text="Label" VBox.vgrow="ALWAYS">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Label>
                        <Label fx:id="labelPrecioTotal" text="Label">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Label>
                        <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                           <children>
                              <Button fx:id="btnAdd" mnemonicParsing="false" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets right="5.0" />
                                 </HBox.margin></Button>
                              <Button fx:id="btnRemove" mnemonicParsing="false" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets left="5.0" />
                                 </HBox.margin></Button>
                           </children>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </HBox>
                     </children></VBox>
               </children>
                </VBox>
            </children>
        </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="btnFactura" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Realizar Factura" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin></Button>
            <Button fx:id="btnGenerarHistorico" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Generar Histórico" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
    </children>
</VBox>
